{
    "manifest_version": 3,
    "name": "CareerGini Copilot",
    "version": "1.0.0",
    "description": "Your AI Career Companion for LinkedIn and Job Boards",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs",
        "sidePanel"
    ],
    "host_permissions": [
        "https://www.linkedin.com/*",
        "https://www.indeed.com/*",
        "http://localhost:8000/*",
        "http://localhost:3000/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "CareerGini Copilot"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "background": {
        "service_worker": "dist/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/jobs/*",
                "https://www.indeed.com/viewjob*"
            ],
            "js": [
                "dist/content.js"
            ],
            "css": [
                "dist/content.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*",
                "dist/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}